<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 加载滚动条样式 -->
    <style name="progressBarLoading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    <!--Dialog模板LinearLayout-->
    <style name="Dialog_Base_LinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_70</item>
        <item name="android:layout_marginEnd">@dimen/dp_70</item>
        <item name="android:layout_marginTop">@dimen/dp_150</item>
        <item name="android:layout_marginBottom">@dimen/dp_150</item>
        <item name="android:background">@drawable/shape_circle_corner_5</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Dialog模板 TextView Title -->
    <style name="Dialog_Base_TextView_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textColor">@color/base_black</item>
    </style>

    <!--Dialog模板 TextView Content-->
    <style name="Dialog_Base_TextView_Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_20</item>
        <item name="android:textSize">@dimen/sp_19</item>
        <item name="android:textColor">@color/base_black</item>
    </style>


    <!--Dialog模板 Btn LinearLayout-->
    <style name="Dialog_Base_Btn_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--Dialog模板 Click TextView-->
    <style name="Dialog_Base_Click_TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textColor">@color/base_black</item>
    </style>

    <style name="TipDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>