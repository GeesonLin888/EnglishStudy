<resources>

    <!--标题栏-->

    <style name="titlebar_root_relativelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
    </style>

    <style name="titlebar_back_title_container">
        <item name="android:id">@id/ll_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@drawable/selector_color_pressed</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
    </style>

    <style name="titlebar_back_imgv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_marginRight">@dimen/dp_12</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:background">@drawable/selector_btn_back_pressed</item>
    </style>

    <style name="titlebar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/selector_color_pressed</item>
        <item name="android:textColor">@drawable/selector_text_color_pressed</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <!--linzhicong 0904 start-->
    <style name="system_notification_titlebar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>
    <!--linzhicong 0904 end-->
</resources>